<% layout("./layouts/boilerplate.ejs") %>

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-3">
                <a href="/listings/<%= listingData._id %>" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h2 class="mb-0">Edit Listing</h2>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <form method="POST" action="/listings/<%= listingData._id %>?_method=PUT">
                        
                        <!-- Title -->
                        <div class="mb-3">
                            <label for="title" class="form-label">
                                <i class="fas fa-home me-2"></i>Property Title
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="title"
                                   name="listing[title]" 
                                   value="<%= listingData.title %>"
                                   placeholder="Enter a catchy title for your property"
                                   required>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label for="description" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Description
                            </label>
                            <textarea class="form-control" 
                                      id="description"
                                      name="listing[description]" 
                                      rows="4"
                                      placeholder="Describe your property..."
                                      required><%= listingData.description %></textarea>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            <label for="image" class="form-label">
                                <i class="fas fa-camera me-2"></i>Image URL
                            </label>
                            <input type="url" 
                                   class="form-control" 
                                   id="image"
                                   name="listing[image][url]" 
                                   value="<%= typeof listingData.image === 'object' ? listingData.image.url : listingData.image %>"
                                   placeholder="https://example.com/image.jpg">
                            <div class="form-text">Paste a URL to an image of your property</div>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label for="price" class="form-label">
                                <i class="fas fa-rupee-sign me-2"></i>Price per Night
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">â‚¹</span>
                                <input type="number" 
                                       class="form-control" 
                                       id="price"
                                       name="listing[price]" 
                                       value="<%= listingData.price %>"
                                       min="0"
                                       required>
                            </div>
                        </div>

                        <!-- Location and Country -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="location" class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>Location
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="location"
                                       name="listing[location]" 
                                       value="<%= listingData.location %>"
                                       placeholder="City, State"
                                       required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="country" class="form-label">
                                    <i class="fas fa-flag me-2"></i>Country
                                </label>
                                <input type="text" 
                                       class="form-control" 
                                       id="country"
                                       name="listing[country]" 
                                       value="<%= listingData.country %>"
                                       placeholder="Country"
                                       required>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="/listings/<%= listingData._id %>" class="btn btn-outline-secondary me-md-2">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Update Listing
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>